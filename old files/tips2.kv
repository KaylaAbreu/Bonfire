<AddTips>:
    name: 'addTips'

    canvas.before:
        Color:
            rgba: 250/255, 237/255, 202/255, 1 #cream background color
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: tips_label
        text: "Add a New Tip for Your \n      Fellow Explorers"
        multiline: True
        font_size: "22sp"
        pos_hint: {"center_x": .5, "center_y": .85}
        color: (254/255, 93/255, 38/255) #dark orange color

