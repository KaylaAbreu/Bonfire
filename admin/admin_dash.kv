<AdminDashScreen>:
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Bonfire Stories"
            anchor_title: "left"
            left_action_items: [["home", lambda x: root.callback()]]
            right_action_items: [["logout", lambda x: root.on_logout()]]
            elevation: 1
            md_bg_color: 248/255, 143/255, 70/255, 1 #light orange
            specific_text_color: 44/255, 44/255, 44/255, 1 #gray
        MDFloatLayout:
            md_bg_color: 250/255, 237/255, 202/255, 1  # off white color in RGBA format
            canvas:
                Color:
                    rgb: 250/255, 250/255, 250/255, 1
            canvas.before:
                Color:
                    rgb: 217/255, 217/255, 217/255, 1

            MDRaisedButton:
                md_bg_color: 248/255, 143/255, 79/255, 1 #light orange
                size_hint: .6, .07
                pos_hint: {"center_x": .5, "center_y": .7}
                text: "Mountain Bonfire"
                text_color: 44/255, 44/255, 4/255, 1 #gray
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "WelcomeMtScreen"

            MDRaisedButton:
                md_bg_color: 248/255, 143/255, 79/255, 1 #light orange
                size_hint: .6, .07
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "Piedmont Bonfire"
                text_color: 44/255, 44/255, 44/255, 1 #gray

                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "WelcomePtScreen"

            MDRaisedButton:
                md_bg_color: 248/255, 143/255, 79/255, 1 #light orange
                size_hint: .6, .07
                pos_hint: {"center_x": .5, "center_y": .3}
                text: "Coastal Bonfire"
                text_color: 44/255, 44/255, 44/255, 1 #gray

                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "WelcomeCtScreen"

            MDRaisedButton:
                md_bg_color: 248/255, 143/255, 79/255, 1 #light orange
                size_hint: .6, .07
                pos_hint: {"center_x": .5, "center_y": .1}
                text: "Users Stories"
                text_color: 44/255, 44/255, 44/255, 1
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "UserPostScreen"


