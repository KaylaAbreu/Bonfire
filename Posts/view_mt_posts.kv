MDBoxLayout:
    id: "view_posts"
    orientation: "vertical"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "orange_gradient.png"
            text:
    MDTopAppBar:
        title: "Mountain Bonfire"
        anchor_title: "left"
        left_action_items: [["menu", lambda x: app.callback()]] #implement
        elevation: 1
        md_bg_color: "black"
        specific_text_color: 227/255, 71/255, 16/255, 1

    MDScrollView:
        MDList:
            id: story_container

    MDBottomAppBar:
        md_bg_color: "black"
        MDTopAppBar:
            title: "Share your story"
            md_bg_color: "black"
            elevation: 1
            type: "bottom"
            icon: "plus"
            icon_color: "black"
            mode: "end"
            specific_text_color: 227/255, 71/255, 16/255, 1
            on_action_button: app.callback(self.icon) #Have icon go to AddPosts